{
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.39.1",
    "cypress": "^12.17.4",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-mochawesome-reporter": "^3.5.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": "cypress/support/step_definitions"
  },
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome --headless --env allure=true",
    "cy:run:reg:chrome": "cypress run --browser chrome --spec cypress\\e2e\\automationExercice\\Regression_Excecice.feature",
    "cy:run:reg:fire": "cypress run --browser firefox --spec cypress\\e2e\\automationExercice\\Regression_Excecice.feature",
    "cy:run:reg:edge": "cypress run --browser edge --spec cypress\\e2e\\automationExercice\\Regression_Excecice.feature",
    "cy:run:home": "cypress run --browser chrome --spec cypress\\e2e\\automationExercice\\home.feature",
    "cy:run:allure:reg": "cypress run --browser chrome --env allure=true --spec cypress\\e2e\\automationExercice\\Regression_Excecice.feature",
    "allure: report": "allure generate allure-results --clean -o allure-report",
   
    "cy:auto1": "cypress run --browser edge --spec cypress/e2e/automationExercice/Regression_auto.feature",
    "cy:auto2": "cypress run --browser edge --spec cypress/e2e/automationExercice/Regression_Excecice.feature",
    "cy:auto3": "cypress run --browser edge --spec cypress/e2e/automationExercice/Regression_Excecice.feature",
    "cy:auto4": "cypress run --browser edge --spec cypress/e2e/automationExercice/Regression_Excecice.feature",
    "cy:auto5": "cypress run --browser edge --spec cypress/e2e/automationExercice/Regression_Excecice.feature",
    "cy:auto_runner1": "cypress run --browser edge --spec cypress\\e2e\\automationExercice\\Regression_auto.feature",
    "cy:auto_runner2": "cypress run --browser edge --spec cypress\\e2e\\automationExercice\\Regression_auto.feature"
    
  }
}
